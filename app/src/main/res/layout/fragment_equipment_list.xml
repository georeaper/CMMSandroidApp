<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.WorkOrders.EquipmentListFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center"

            >
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:textColor="@color/colorPrimary"
        android:textSize="19sp"
        android:gravity="center"
        android:text="Work Orders Equipment List"/>
        <TextView
            android:layout_width="0dp"
            android:layout_margin="3dp"
            android:id="@+id/equipmentListAdd"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="ADD"
            android:background="@drawable/background_round_corners_white_stroke"
            android:gravity="center"
            android:textSize="19sp"/>




</LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/equipmentListRecyclerView"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/work_orders_equipment_list_row"/>
    </LinearLayout>
</FrameLayout>