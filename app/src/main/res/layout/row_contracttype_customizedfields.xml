<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/row_contracttype_customizedfields_textview"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_margin="5dp"/>
    <View
        android:layout_width="8dp"
        android:layout_height="38dp"
        android:layout_weight="1"
        android:background="@drawable/solid_circle_drawable"
        android:layout_gravity="center"

        android:id="@+id/row_contracttype_customizedfields_view"
        android:gravity="center"

        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/row_contracttype_customizedfields_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/red"
        android:text="Delete" />
</LinearLayout>
