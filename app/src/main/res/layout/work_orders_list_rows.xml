<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bordered_rectangle"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="3"
        >
        <View
            android:id="@+id/viewEquipmentList"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_weight="1.5"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Title"
                android:textColor="@color/AppColorText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/workOrderListTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="Metropolitan"
                android:textColor="@color/black"

                android:textSize="15sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerThickness="2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item21"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_weight="1.5">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Customer Name"
                android:textColor="@color/AppColorText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/workOrderListCustomerName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="CustomerTesterName"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerThickness="2dp" />

        </LinearLayout>



    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <TextView
        android:id="@+id/workOrderListReportNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_weight="0.5"
        android:text="ReportNumber :Prefix2222"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:textSize="14sp"
        android:textColor="@color/AppColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item21" />
    <TextView
        android:id="@+id/workOrderListDateStarted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_weight="0.5"
        android:layout_marginRight="10dp"
        android:text="Opened Date : 16/7/2023 "
        android:background="@color/white"
        android:textColor="@color/AppColor"
        />
</LinearLayout>

</LinearLayout>