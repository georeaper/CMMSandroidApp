<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="@drawable/bordered_rectangle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <ImageView

                android:id="@+id/ImageViewCustomerName"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:background="@color/BackgroundElementsColor"
                app:srcCompat="@drawable/customer_name" />


            <TextView
                android:id="@+id/tv_list_customerName"
                android:background="@color/BackgroundElementsColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="5dp"
                android:text="Customer Name"
                android:textColor="@color/AppColorText"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/ImageViewStartDate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:background="@color/BackgroundElementsColor"
                app:srcCompat="@drawable/start_date"
                 />

            <TextView
                android:id="@+id/tv_list_startDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/BackgroundElementsColor"
                android:text="startdate"
                android:textColor="@color/AppColorText"
                android:textSize="16sp"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/ImageViewTitleCases"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:background="@color/BackgroundElementsColor"
                app:srcCompat="@drawable/title_icon_description" />


            <TextView

                android:id="@+id/tv_list_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/BackgroundElementsColor"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="5dp"
                android:text="title"
                android:textColor="@color/AppColorText"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/ImageViewStatus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:background="@color/BackgroundElementsColor"
                android:layout_gravity="center"
                app:srcCompat="@drawable/in_progress_icon_reconstructed"
                />

            <TextView
                android:id="@+id/tv_list_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/BackgroundElementsColor"
                android:gravity="center"
                android:padding="5dp"
                android:text="status"
                android:textColor="@color/AppColorText"
                android:textSize="16sp"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>