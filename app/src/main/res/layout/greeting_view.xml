<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_greeting_view_top"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Today is 26/11/2023"
        android:textSize="25sp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_greeting_view_top">

        <TextView
            android:id="@+id/tv_greeting_view_technicalCases"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="Technical Cases this month"
            android:gravity="center_vertical"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="16"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/tv_greeting_view_technicalCases_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_greeting_view_technicalCases"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/tv_greeting_view_downtime"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Total Downtime(hrs) this month"
            android:textSize="20sp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_greeting_view_technicalCases"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/tv_greeting_view_downtime_number"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="52"
            android:textSize="25sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_greeting_view_downtime"
            app:layout_constraintTop_toBottomOf="@+id/tv_greeting_view_technicalCases_number"
            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/tv_greeting_view_maintenances"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Maintenances completed this month"
            android:textSize="20sp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_greeting_view_downtime"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/tv_greeting_view_maintenances_number"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="3"
            android:textSize="25sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_greeting_view_maintenances"
            app:layout_constraintTop_toBottomOf="@+id/tv_greeting_view_downtime_number"
            app:layout_constraintWidth_percent="0.2" />

    </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>