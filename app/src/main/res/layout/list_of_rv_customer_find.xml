        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/list_tv_customer_id"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/list_tv_customer_name"
        android:textSize="14sp"/>

</LinearLayout>