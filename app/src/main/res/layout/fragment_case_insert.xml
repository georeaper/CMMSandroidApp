<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/autoComp_engineer_cases"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CaseInsertFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title_case"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_title_case"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/tv_case_started"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Started date"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_case_startedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="48"
                android:inputType="date" />

            <TextView
                android:id="@+id/tv_engineer_cases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Engineer"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/et_user_case"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_customer_case"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Customer Select"
                android:textSize="18sp"
                android:gravity="center"/>


            <TextView
                android:id="@+id/tv_endDate_cases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_case_endedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_urgent_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="Status"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/sp_urgent_status"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_status_cases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Active"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/checkbox_active_case"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_cases_comments"
                android:maxLines="4"
                android:minLines="4"
                android:lines="4"
                android:hint="Comments?"
                />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btn_clear_cases"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Clear"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_submit_cases"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btn_submit_cases"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Submit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_clear_cases"
                tools:layout_editor_absoluteY="50dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</FrameLayout>