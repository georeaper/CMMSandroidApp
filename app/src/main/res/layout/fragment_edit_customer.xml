<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_customer_fLayout"
    tools:context=".EditCustomerFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:id="@+id/et_customerName"
        android:hint="Enter Customer name"
        android:layout_margin="10dp"
        android:padding="5dp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:id="@+id/et_vatNumber"
            android:hint="Enter Vat Number"
            android:layout_margin="10dp"
            android:padding="5dp"/>

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_email"
        android:layout_margin="10dp"
        android:hint="Enter Customer email"
        android:padding="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/et_address"
        android:lines="3"
        android:minLines="3"
        android:maxLines="3"
        android:layout_margin="10dp"
        android:hint="Enter Address Information"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:id="@+id/et_phone1"
            android:hint="Enter Phone Number 1"
            android:layout_margin="10dp"
            android:padding="5dp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:id="@+id/et_phone2"
            android:hint="Enter Phone Number 2"
            android:layout_margin="10dp"
            android:padding="5dp"/>

    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/et_notes"
        android:lines="6"
        android:minLines="6"
        android:maxLines="6"
        android:layout_margin="10dp"
        android:hint="Type Any notes about the Customer"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:id="@+id/btn_clear"
            android:text="clear"
            android:layout_margin="10dp"
            android:padding="5dp"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:id="@+id/btn_save"
            android:text="Save"
            android:layout_margin="10dp"
            android:padding="5dp"/>

    </LinearLayout>

</LinearLayout>


</FrameLayout>