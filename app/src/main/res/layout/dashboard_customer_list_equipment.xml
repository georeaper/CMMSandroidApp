<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/recyclerviewCustomerDashInstalation"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Installation"
        android:gravity="center"
        android:layout_margin="3dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <TextView
        android:id="@+id/recyclerviewCustomerDashModel"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Model"
        android:layout_margin="3dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintEnd_toStartOf="@+id/recyclerviewCustomerDashInstalation"
        app:layout_constraintStart_toStartOf="@id/recyclerviewCustomerDashIndicator" />

    <TextView
        android:id="@+id/recyclerviewCustomerDashEquipmentSN"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/SerialNumber"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_margin="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/recyclerviewCustomerDashIndicator"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recyclerviewCustomerDashIndicator"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>