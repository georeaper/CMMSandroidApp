<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bordered_rectangle"
    android:layout_margin="5dp">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                >
                <View
                    android:id="@+id/viewEquipmentList"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_marginRight="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    />

                <LinearLayout
                    android:id="@+id/item11"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/item21"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"

                        android:text="Customer Name"
                        android:textColor="@color/AppColorText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/customerNameEquipmentList"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:text="Metropolitan"
                        android:textColor="@color/black"

                        android:textSize="19sp" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerThickness="2dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item21"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="3dp"


                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/viewEquipmentList"
                    >

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Serial Number"
                        android:textColor="@color/AppColorText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/serialNumberEquipmentList"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="SN90781980WA"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerThickness="2dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/modelEquipmentList"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Model :B650"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:textSize="15sp"
                    android:textColor="@color/AppColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item21" />

                <TextView
                    android:id="@+id/installationDateEquipmentList"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="Installation Date : 16/7/2023 "
                    android:background="@color/white"


                    android:textColor="@color/AppColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item11" />








        </androidx.constraintlayout.widget.ConstraintLayout>






</LinearLayout>