<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:background="@color/BackgroundElementsColor">

    <!-- Left item -->
    <View
        android:id="@+id/leftItem"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:background="@color/black"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/middleItem" />

    <!-- Middle item -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/middleItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/BackgroundElementsColor"
        app:helperTextEnabled="true"
        app:helperText="@string/helper_text"

        app:layout_constraintStart_toEndOf="@+id/leftItem"
        app:layout_constraintEnd_toStartOf="@+id/rightItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Right item -->
    <ImageButton
        android:id="@+id/rightItem"
        android:background="@color/BackgroundElementsColor"
        android:layout_width="25dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/navigation_list_right"
        app:layout_constraintStart_toEndOf="@+id/middleItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
