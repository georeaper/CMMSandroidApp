<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CustomerInfoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/linearLayoutDates"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:orientation="horizontal">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:hint="Date Created"
        android:id="@+id/fieldReportInfoDateCreatedLayout"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/customerInfoEditTextDateCreated"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="2dp"

            android:textSize="12sp"
            android:inputType="none"
            android:focusable="false"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:id="@+id/fieldReportInfoDateClosedLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/customerInfoEditTextDateClosed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Date Closed"
            android:padding="2dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:inputType="none"
            android:focusable="false"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/fieldReportInfoLinearLayoutHeader"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutDates"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp">
   <com.google.android.material.textfield.TextInputLayout
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="0.5"
       android:layout_marginEnd="5dp"
       android:hint="Report Number"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
       android:id="@+id/fieldReportInfoReportNumberLayout">

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/customerInfoEditTextReportNumber"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:hint="Report Number"
           android:padding="2dp"
           android:gravity="center"
           android:textSize="14sp"
           android:inputType="none"
           android:focusable="false" />
   </com.google.android.material.textfield.TextInputLayout>
   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="50dp"
       android:orientation="vertical"
       android:layout_weight="0.5">



   </LinearLayout>



</LinearLayout>


      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginTop="5dp"
          android:layout_marginStart="5dp"
          android:layout_marginEnd="5dp"
          android:id="@+id/fieldReportInfoCustomerNameLayout"
          android:hint="Customer Name"
          android:background="@drawable/full_color_background"
          android:backgroundTint="@color/colorPrimary"
          app:layout_constraintTop_toBottomOf="@+id/fieldReportInfoLinearLayoutHeader"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent">
         <com.google.android.material.textview.MaterialTextView
             android:id="@+id/customerInfoTextViewCustomerName"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="Customer Name"
             android:textSize="15sp"
             android:gravity="center"
             style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"/>

      </com.google.android.material.textfield.TextInputLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_marginTop="5dp"
          android:layout_marginStart="5dp"
          android:layout_marginEnd="5dp"
          android:id="@+id/fieldReportInfoLayoutDepartmentLayout"
          app:layout_constraintTop_toBottomOf="@id/fieldReportInfoCustomerNameLayout"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:orientation="horizontal">
         <com.google.android.material.textfield.TextInputLayout
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.5"
             android:layout_marginEnd="5dp"
             android:hint="Department"
             android:id="@+id/fieldReportInfoDepartmentLayout"

             >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="2dp"
                android:id="@+id/customerInfoEditTextDepartment"
                />

         </com.google.android.material.textfield.TextInputLayout>
         <com.google.android.material.textfield.TextInputLayout
             android:layout_width="0dp"
             android:layout_weight="0.5"
             android:layout_height="match_parent"
             android:hint="Report Type"
             android:id="@+id/fieldReportInfoReportTypeLayout"
             style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
             >
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="2dp"
                android:id="@+id/customerInfoAutocompleteReportType"

                />

         </com.google.android.material.textfield.TextInputLayout>
      </LinearLayout>

      <com.google.android.material.textfield.TextInputLayout
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:id="@+id/fieldReportInfoSubjectLayout"
         android:layout_marginTop="5dp"
         android:layout_marginStart="5dp"
         android:layout_marginEnd="5dp"
         app:layout_constraintTop_toBottomOf="@+id/fieldReportInfoLayoutDepartmentLayout"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:padding="2dp"
            android:hint="Main Subject"
            android:id="@+id/customerInfoEditTextMainSubject"/>

     </com.google.android.material.textfield.TextInputLayout>
      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:id="@+id/fieldReportInfoMainLayout"
          android:layout_marginTop="5dp"
          android:layout_marginStart="5dp"
          android:layout_marginEnd="5dp"
          app:layout_constraintTop_toBottomOf="@+id/fieldReportInfoSubjectLayout"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent">
         <com.google.android.material.textfield.TextInputEditText
             android:id="@+id/customerInfoEditTextMainReport"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textSize="14sp"
             android:lines="7"
             android:hint="Main Report"/>

      </com.google.android.material.textfield.TextInputLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:id="@+id/fieldReportInfoLinearLayoutSignature"
          app:layout_constraintTop_toBottomOf="@id/fieldReportInfoMainLayout"
          android:layout_marginStart="5dp"
          android:layout_marginEnd="5dp"
          android:layout_marginTop="20dp"
          android:weightSum="2"
          android:orientation="horizontal">
         <com.google.android.material.textfield.TextInputLayout
             android:layout_width="0dp"
             android:layout_height="40dp"
             android:layout_weight="1.7"
             android:layout_marginEnd="5dp"

             android:id="@+id/fieldReportInfoContactNameLayout">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/customerInfoEditTextSigneeName"
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="match_parent"
                android:hint="Signee Name"/>


         </com.google.android.material.textfield.TextInputLayout>
         <ImageButton
             android:id="@+id/customerInfoImageButtonSignature"
             android:layout_width="0dp"
             android:layout_weight="0.3"

             android:layout_height="match_parent"
             android:background="@null"
             android:src="@drawable/document_sign40x40"/>


      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:orientation="horizontal"
          android:weightSum="2"
          android:layout_marginEnd="5dp"
          android:layout_marginStart="5dp"
          android:layout_marginTop="20dp"
          android:id="@+id/fieldReportInfoLinearFooter"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/fieldReportInfoLinearLayoutSignature">
         <ImageButton
             android:id="@+id/customerInfoImageButtonPrintReport"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="@null"
             android:src="@drawable/print_icon40x40"/>

         <ImageButton
             android:id="@+id/customerInfoImageButtonSaveReport"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="@null"
             android:src="@drawable/save_icon40x40"/>


      </LinearLayout>


   </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>